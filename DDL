
CREATE TABLE com_logali_salesOrder_HEADER (
  ID NVARCHAR(36) NOT NULL,
  EMAIL NVARCHAR(5000) NOT NULL,
  FIRSTNAME NVARCHAR(5000),
  LASTNAME NVARCHAR(5000),
  COUNTRY NVARCHAR(5000),
  CREATEON DATE_TEXT DEFAULT CURRENT_TIMESTAMP,
  DELIVERYSTATUS TIMESTAMP_TEXT DEFAULT CURRENT_TIMESTAMP,
  ORDERSTATUS INTEGER,
  IMAGEURL NVARCHAR(5000),
  PRIMARY KEY(ID, EMAIL)
);

CREATE TABLE com_logali_salesOrder_ITEMS (
  ID NVARCHAR(36) NOT NULL,
  NAME NVARCHAR(5000),
  DESCRIPTION NVARCHAR(5000),
  RELEASEDATE DATE_TEXT DEFAULT CURRENT_TIMESTAMP,
  DISCONTINUEDATE DATE_TEXT DEFAULT CURRENT_TIMESTAMP,
  PRICE DECIMAL(12, 2),
  HEADER_ID NVARCHAR(36),
  HEADER_EMAIL NVARCHAR(5000),
  PRIMARY KEY(ID)
);

CREATE VIEW headSale_Header AS SELECT
  HEADER_0.ID,
  HEADER_0.EMAIL,
  HEADER_0.FIRSTNAME,
  HEADER_0.LASTNAME,
  HEADER_0.COUNTRY,
  HEADER_0.CREATEON,
  HEADER_0.DELIVERYSTATUS,
  HEADER_0.ORDERSTATUS,
  HEADER_0.IMAGEURL
FROM com_logali_salesOrder_HEADER AS HEADER_0;

CREATE VIEW headSale_Items AS SELECT
  ITEMS_0.ID,
  ITEMS_0.NAME,
  ITEMS_0.DESCRIPTION,
  ITEMS_0.RELEASEDATE,
  ITEMS_0.DISCONTINUEDATE,
  ITEMS_0.PRICE,
  ITEMS_0.HEADER_ID,
  ITEMS_0.HEADER_EMAIL
FROM com_logali_salesOrder_ITEMS AS ITEMS_0;

